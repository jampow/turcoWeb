<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
        <title>TurcoWeb</title>

        <script src="/javascripts/senchaTouch/sencha-touch.js" type="text/javascript"></script>
        <link  href="/javascripts/senchaTouch/resources/css/sencha-touch.css" rel="stylesheet" type="text/css" />
        <link  href="/stylesheets/application.mobile.css" rel="stylesheet" type="text/css" />

        <script type="text/javascript">

          var myToolbar = new Ext.Toolbar({
                            dock: 'top',
                            title: 'turcoWeb',
                            items: {
                              xtype: 'button',
                              text: 'Sair',
                              handler: function(){
                                window.location.replace('/logout');
                              }
                            }
                          });

          var carousel =  new Ext.Carousel({
                            items: [{
                              html: '<p>Vers√£o mobile em desenvolvimento.</p>',
                              cls: 'card'
                            }, {
                              html: '<p>Aguarde por novidades!</p>',
                              cls: 'card'
                            }]
                          });

          new Ext.Application({
              launch: function() {
                  new Ext.Panel({
                      fullscreen: true,
                      dockedItems: myToolbar,
                      layout: {
                        type: 'vbox',
                        align: 'stretch'
                      },
                      defaults: {
                        flex: 1
                      },
                      items: carousel
                  });
              }
          });

        </script>

    </head>
    <body></body>
</html>

