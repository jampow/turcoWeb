<div class="clear"></div>
<script type="text/javascript">
  var calcFields =   '#purchase_order_order_items_attributes_0_quantity'
  calcFields    += ', #purchase_order_order_items_attributes_0_unit_value'
  $(calcFields).bind('change', function(){
    var x = $('#purchase_order_order_items_attributes_0_quantity'  ).val();
    var y = $('#purchase_order_order_items_attributes_0_unit_value').val();
    x = x.replace(',', '.');
    y = y.replace(',', '.');
    var z = (x*y) + '';
    z = z.replace('.', ',');
    $('#purchase_order_order_items_attributes_0_total_value').val(z);
  });
</script>

