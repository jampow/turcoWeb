<% content_for :header do -%>
<link rel="stylesheet" href="/stylesheets/fonts/c39/stylesheet.css">

<style type="text/css">
    body { font-family: arial; }

    #card {
      border: solid 1px #000;
      width: 350px;
      height: 216px;
      position: relative;
    }

    #sup * { float: left; }
    #pict { float: right; }
    #sup p {
      width: 65%;
      text-align: left;
      padding: 2px 10px;
      text-transform: uppercase;
    }
    #sup { overflow: auto;}

    #name {
      margin: 0;
      /*font-size: 23px;*/
    }

    #corp {
      margin: 5px 0 0 0;
      font-style: italic;
      color: #333;
    }

    img {
      padding: 10px;
      text-align: left ;
    }

    .codebar {
      font-family: 'c39';
      font-size: 50px;
      text-transform: uppercase;
      text-align:center;
      position:absolute;
      bottom: 10px;
      width: 100%
    }
    .codebar:after  { content:"*"; }
    .codebar:before { content:"*"; }
</style>

<% end -%>

</head>
<body>
  <div id="card">
    <div id="sup">
      <%= image_tag @contact.photo.url(:thumb), :id => "pict" %>
      <%= image_tag "/images/logo_card.jpg"   , :id => "logo" %>
      <p id="name"><%= "#{@contact.client.id} - #{@contact.name}" %></p>
      <p id="corp"><%= @contact.client.name %></p>
    </div>

    <div class="codebar"><%= "%08d" % @contact.id %></div>
  </div>
</body>
</html>