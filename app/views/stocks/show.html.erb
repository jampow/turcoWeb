<% content_for :menu do -%>
  <h1>Movimentação de estoque (<%= @product.name %>)</h1>
  <%= mount_menu ['back'] %>
<% end -%>

<%= print_content "Descrição"        , h(@stock.description)                                                            , :width => 100 %>
<%= print_content "Antes"            , h(@stock.total_before.to_s + ' ' + @stock.total_before_measure_unit.measure_unit) %>

<% if !@stock.quantity_in.nil? -%>
  <%= print_content "Entrada"        , h(@stock.quantity_in)                                                             %>
<% else -%>  
  <%= print_content "Saída"          , h(@stock.quantity_out)                                                            %>
<% end -%>
<%= print_content "Unidade de medida", h(@stock.measure_unit.measure_unit)                                               %>

<%= print_content "Depois"           , h(@stock.total.to_s + ' ' + @stock.total_measure_unit.measure_unit)               %>
