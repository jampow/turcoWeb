<% content_for :menu do -%>
  <h1>Nova cláusula contratual</h1>
  <%= mount_menu %>
<% end -%>

<% form_for(@contract) do |f| %>
  <%= f.error_messages %>

  <%= f.select     :father_id   , @clauses  , :label => "Pai"          , :size => 50 , :include_blank => true %>
  <%= f.select     :list_type_id, @listtypes, :label => "Tipo da lista", :size => 30  %>
  <%= f.text_field :order                   , :label => "Ordem"        , :size => 10  %>
  <%= f.check_box  :rubric                  , :label => "Rúbrica"      , :size => 10  %>
  <%= f.text_area  :text                    , :label => "Texto"        , :size => 100 %>
<% end %>