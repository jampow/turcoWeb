<% content_for :menu do -%>
  <h1>Novo NCM</h1>
  <%= mount_menu %>
<% end -%>

<% form_for(@ncm) do |f| %>
  <div class="form-wrapper">
    <%= f.error_messages %>
    <%= f.text_field :description, :label => 'Descrição', :size => 50 %>
    <%= f.text_field :code       , :label => 'Código' %>
    <%= f.text_field :unit       , :label => 'Unidade' %>
    <%= f.text_field :ipi        , :label => 'IPI' %>
  </div>
<% end %>

