<script type="text/javascript">
  $(function(){
    function fill_value(){
      var it = $(this)
      setTimeout(function(){
        var value_id = it.attr('id').replace(/percent/, 'value');
        var total_value = format.decimal.toNumber($('#receivable_value').val());
        var part_value = format.decimal.toNumber(it.val());
        var result = format.number.toDecimal(((part_value * total_value) / 100),"10,2");
        $('#' + value_id).val(result);
      }, 250);
    }
    function fill_percent(){
      var it = $(this)
      setTimeout(function(){
        var percent_id = it.attr('id').replace(/value/, 'percent');
        var total_value = format.decimal.toNumber($('#receivable_value').val());
        var part_value = format.decimal.toNumber(it.val());
        var result = format.number.toDecimal(((part_value / total_value) * 100),"10,2");
        $('#' + percent_id).val(result);
      }, 250);
    }
    $('#receivable_value').keyup(function(){
      var it = $(this);
      setTimeout(function(){
        $('#receivable_receivable_cost_divisions_attributes_0_value').val(it.val());
        $('#receivable_receivable_cost_divisions_attributes_0_percent').val('100');
      }, 250);
    });
    $(".receivable_cost_division_value").keyup(fill_percent);
    $(".receivable_cost_division_percent").keyup(fill_value);
  });
</script>

