<% content_for :menu do -%>
  <h1>Título a receber</h1>
  <%= mount_menu %>
<% end -%>

<% form_for(@receivable) do |f| %>

  <%= f.error_messages %>

  <fieldset>
    <legend>Origem</legend>
    <%= f.hidden_field :client_id %>
    <%= f.text_field :client_name                                       , :label => "Receber de"      , :size => 30, :class => 'autocomplete', :source => 'client', :pref => 'receivable_' %>
    <%= f.text_field :historic                                          , :label => "Histórico"       , :size => 30 %>
    <%= f.text_field :issue_date                                        , :label => "Data de Emissão" , :size => 10, :class => 'datepicker' %>
    <%= f.select :document_kind_id  , Receivable::DocumentKind.to_select, :label => 'Documento'       , :size => 10 %>
    <%= f.text_field :invoice_number                                    , :label => "Número da NF"    , :size => 20 %>
    <%# f.check_box  :settled                                           , :label => "Quitado"         , :size => 10 %>
  </fieldset>
  <fieldset>
    <legend>Recebimento</legend>
    <%= f.select :account_id       , BankAccount.to_select              , :label => 'Conta'            ,:size => 20 %>
    <%= f.select :payment_method_id, Receivable::PaymentMethod.to_select, :label => 'Meio de Pagamento',:size => 20 %>
    <%= f.text_field :due_date                                          , :label => "Vencimento"       ,:size => 20, :class => 'datepicker' %>
    <%= f.select :frequency_id     , Receivable::Frequency.to_select    , :label => 'Frequencia'       ,:size => 20 %>
    <%= f.text_field :value                                             , :label => "Valor"            ,:size => 20, :class => "mask-decimal", :decimal => "10,2" %>

  </fieldset>
  <fieldset>
    <legend>Informações Adicionais</legend>
    <div id="aditional-informations">
      <%= f.text_field :competence                                                         , :label => 'Competência'             , :class => 'datepicker' %>
      <%= f.text_field :serie_number                                                       , :label => 'Num. Doc. Série'                                  %>
      <%= f.text_field :carrier                                                            , :label => 'Portador'                                         %>
      <%= f.text_field :barcode                                                            , :label => 'Código de Barras do Doc.'                         %>
      <%= f.select     :rate_type_id            , Receivable::RateType.to_select           , :label => 'Lançar'                                           %>
      <%= f.text_field :fine                                                               , :label => 'Multa'                                            %>
      <%= f.text_field :rate                                                               , :label => 'Juros'                                            %>
      <%= f.select     :rate_calculation_type_id, Receivable::RateCalculationType.to_select, :label => 'Calcular'                                         %>
      <%= f.text_area  :observations                                                       , :label => 'Observações'             ,  :size => 100          %>
      <div class="clear"></div>
    </div>
  </fieldset>
  <div id="division_parts">
    <% field_set_tag 'Divisão/Rateio do Valor' do -%>
      <%= new_receivable_division_item_toolbar f %>
      <% f.fields_for :receivable_cost_divisions, @division do |rcd| %>
        <label class="hide"><%= rcd.hidden_field :id %></label>
        <label class="hide"><%= rcd.hidden_field :account_plan_id %></label>
        <%= rcd.text_field :account_plan_name, :label => 'Plano de Conta' , :size => 20, :class => 'autocomplete', :source => 'account_plan_rec', :pref => "receivable_receivable_cost_divisions_attributes_0_" %>
        <label class="hide"><%= rcd.hidden_field :cost_center_id %></label>
        <%= rcd.text_field :cost_center_name , :label => 'Centro de Custo', :size => 20, :class => 'autocomplete', :source => 'cost_center' , :pref => "receivable_receivable_cost_divisions_attributes_0_" %>
        <%= rcd.text_field :observations     , :label => 'Observação'     , :size => 20 %>
        <%= rcd.text_field :value            , :label => 'Valor'          , :size => 20, :class => 'mask-decimal receivable_cost_division_value'  , :decimal => "10,2" %>
        <%= rcd.text_field :percent          , :label => '% do Total'     , :size => 20, :class => 'mask-decimal receivable_cost_division_percent', :decimal => "10,2" %>
        <div class="clear"></div>
      <% end -%>

      <table id="receivable_division_order_items" cellpading="0" cellspacing="0" border="0" width="100%">
        <thead>
          <tr>
            <th class="hide">Id</th>
            <th class="hide">Id do Plano</th>
            <th>Plano de Conta</th>
            <th class="hide">Id do Centro</th>
            <th>Centro de Custos</th>
            <th>Observação</th>
            <th>Valor</th>
            <th>%</th>
          </tr>
        </thead>
        <tbody>
        <% f.fields_for :receivable_cost_divisions do |div| %>
          <tr>
            <td class="hide"><%= div.hidden_field :id %><span></span></td>
            <td class="hide"><%= div.hidden_field :account_plan_id %><span></span></td>
            <td><%= div.hidden_field :account_plan_name %><span></span></td>
            <td class="hide"><%= div.hidden_field :cost_center_id %><span></span></td>
            <td><%= div.hidden_field :cost_center_name %><span></span></td>
            <td><%= div.hidden_field :observations %><span></span></td>
            <td class="right"><%= div.hidden_field :value  , :class => 'mask-decimal', :decimal => "10,2" %><span></span></td>
            <td class="right"><%= div.hidden_field :percent, :class => 'mask-decimal', :decimal => "10,2", :value => (div.object.value * 100 / @payable.value) %><span></span></td>
          </tr>
        <% end %>
        </tbody>
      </table>

      <div id="trash" class="hide"></div>

    <% end -%>
  </div>
  <div class="clear"></div>
<% end %>

<% content_for :script do %>
  <%= js_receivable_division_create_table_item %>
  <%= js_receivable_division_new_item %>
  <%= js_receivable_division_save_item %>
  <%= js_receivable_division_del_item %>
<% end %>

<%= render :partial => "js_new_edit" %>
