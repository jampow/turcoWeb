<% content_for :menu do -%>
  <h1>Produtos</h1>
  <%= mount_menu %>
<% end -%>

<%= table @products, ["code", "Código"], ["name", "Nome"], ["family", "Família"] %>

<table border="0" cellpadding="0" cellspacing="0" class="report">
  <thead>
    <tr>
      <th></th>
      <th>Qtd</th>
      <th>% qtd</th>
      <th>m<sup>2</sup></th>
      <th>% m<sup>2</sup></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th class="left">Locado</th>
      <td class="right"><%= '%.2f' % (@rep_loc.qtd) %></td>
      <td class="right"><%= '%.2f' % (@rep_loc.qtd.to_f * 100 / @rep_tot.qtd.to_f) %></td>
      <td class="right"><%= '%.2f' % (@rep_loc.met2) %></td>
      <td class="right"><%= '%.2f' % (@rep_loc.met2.to_f * 100 / @rep_tot.met2.to_f) %></td>
    </tr>
    <tr>
      <th class="left">Disponível</th>
      <td class="right"><%= '%.2f' % (@rep_tot.qtd.to_i - @rep_loc.qtd.to_i) %></td>
      <td class="right"><%= '%.2f' % (100 - (@rep_loc.qtd.to_f * 100 / @rep_tot.qtd.to_f)) %></td>
      <td class="right"><%= '%.2f' % (@rep_tot.met2.to_f - @rep_loc.met2.to_f) %></td>
      <td class="right"><%= '%.2f' % (100 - (@rep_loc.met2.to_f * 100 / @rep_tot.met2.to_f)) %></td>
    </tr>
    <tr>
      <th class="left">Total</th>
      <td class="right"><%= '%.2f' % (@rep_tot.qtd) %></td>
      <td class="right">100.00</td>
      <td class="right"><%= '%.2f' % (@rep_tot.met2) %></td>
      <td class="right">100.00</td>
    </tr>
  </tbody>
</table>
