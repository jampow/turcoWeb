<div id="dialog" title="Identifique-se">
	<% form_for @user_session, :url => user_session_path(:xml) do |f| %>
    <%= f.error_messages %>
    <%= f.label :login %>
    <%= f.text_field :login, :class => "text ui-widget-content ui-corner-all" %>

    <%= f.label :password %>
    <%= f.password_field :password, :class => "text ui-widget-content ui-corner-all" %>
  <% end %>
</div>

